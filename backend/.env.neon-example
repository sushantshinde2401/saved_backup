# Neon PostgreSQL Database Configuration
# Replace these placeholder values with your actual Neon database credentials
# Get these from your Neon dashboard: https://console.neon.tech/

DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=your-database-name
DB_USER=your-username
DB_PASSWORD=your-password

# SSL is required for Neon PostgreSQL - DO NOT CHANGE
DB_SSL_MODE=require

# Connection timeout (seconds)
DB_CONNECTION_TIMEOUT=30

# Other existing configuration remains the same...
# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Google Drive API Configuration
GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json
GOOGLE_DRIVE_TOKEN_FILE=token.json
GOOGLE_DRIVE_SERVICE_ACCOUNT_FILE=service-account.json
GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive.file

# File Storage Configuration
UPLOAD_FOLDER=uploads
STATIC_FOLDER=static

# QR Code Configuration
QR_VERSION=1
QR_BOX_SIZE=10
QR_BORDER=4

# Security Configuration
MAX_FILE_SIZE=50000000  # 50MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# Application Configuration
APP_NAME=Certificate Management System
BASE_URL=http://localhost:5000

# Toggle OCR endpoints on/off (set to true to enable OCR endpoints)
ENABLE_OCR=false

# Toggle ChatGPT OCR filtering (set to false to disable ChatGPT-based filtering)
ENABLE_CHATGPT_FILTERING=false